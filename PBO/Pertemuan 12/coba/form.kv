<InputForm>:
    orientation: "horizontal"
    padding: 20
    spacing: 20
    font_name: "Poppins.ttf"

    canvas.before:
        Color:
            rgba: 0.678, 0.847, 0.902, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    # Membuat Boxlayout untuk Form InputForm:
    BoxLayout:
        orientation:"vertical"
        size_hint_x: 0.4
        Image:
            source:'logo.png'
            size_hint_y: None
            height: 150

        Label:
            text: "Form Data Mahasiswa"
            font_size: 24
            size_hint_y: 0.2 #None
            height: 40
            bold: True
            color: app.get_color_from_hex("#3B554A")

        Label:
            text: "Nama:"
            size_hint_y: None
            height: 30

        TextInput:
            id: nama_input
            hint_text: "Nama"
            write_tab: False
            multiline: False

        Label:
            text: "NIM:"
            size_hint_y: None
            height: 30

        TextInput:
            id: nim_input
            hint_text: "NIM"
            multiline: False

        Label:
            text: "Jurusan"
            size_hint_y: None
            height: 30

        TextInput:
            id: jurusan_input
            hint_text: "Jurusan"
            multiline: False

        Button:
            text: "Submit"
            size_hint_y: None
            height: 40
            on_release: root.show_table()
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.6
        canvas.before:
            Color:
                rgba: 0,0,0,1
            Line: 
                width: 1.5
                rectangle: self.x, self.y, self.width, self.height

        Label:
            text: "Tabel Mahasiswa"
            size_hint_y: None
            height: 30
            
        ScrollView:
            GridLayout:
                id: tabel_mahasiswa
                cols: 3
                size_hint_y: None 
                height: self.minimum_height
                row_default_height: 30
                row_force_default: True